<%- include('includes/head'); %>
<section>
  <%- include('includes/nav')%>
  <div class="container">
    <div>
        <h1 class = "text-center" style="padding: 35px 0px 0px 0px;">Agenda</h1>
        <p class = "text-center" style="color: gray;"><strong>Aqui est√£o todos os seus contatos</strong></p>
    </div>
    <%- include('includes/messages'); %>
    <div class = "responsive-table">
      <table class="table my-3">
        <%contatos.forEach(contato => {%>
          <tr>
              <td><%=contato.nome%></td>
              <td><%=contato.email%></td>
              <td><%=contato.telefone%></td>
              <td><%=contato.estado%></td>
              <td><a href = "/adicionar-contato/edit/<%=contato._id%>" style="border:none; background-color: white; color: rgb(82, 156, 241);">Editar</a> </td>
              <td><a class = "text-danger" href = "/contato/delete/<%=contato._id%>" style=" border:none; background-color: white;color: rgb(226, 0, 0);padding: 0px;">Remover</a></td>
          </tr>
        <%})%>       
      </table>
    </div>
  </div>
</section>
<%- include('includes/footer'); %>